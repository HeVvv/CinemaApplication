
<resources>


    <style name="AppTheme" parent ="Theme.AppCompat.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#515151</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#515151</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF4081</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <!--<item name="android:windowBackground">@drawable/main_font</item>-->
        <!--<item name="android:background">@drawable/main_font</item>-->
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>
    </style>

    <style name="CustomListView" parent="@android:style/Widget.ListView">
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextView" parent="@android:style/Widget.TextView">
        <item name="android:typeface">monospace</item>
        <item name="android:color">#fbfbfb</item>
    </style>

    <style name="customToolBar" parent="@android:style/Widget.Toolbar">
        <item name="android:background">@drawable/main_font</item>
    </style>

    <style name="customTabLayout" parent="@android:style/Widget.TabWidget">
        <item name="android:background">@drawable/main_font</item>
    </style>

    <style name="customCheckBoxStyle" parent="@android:style/Widget.Holo.CompoundButton.CheckBox">
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <!--<item name="android:background">@drawable/main_font</item>-->
        <item name="android:colorPrimaryDark">#515151</item>
        <item name="android:actionBarSize">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
